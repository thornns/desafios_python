from tqdm import tqdm

pbar = tqdm(total=len(vendas_df['ID Loja']), position=0, leave=True)
# total: De 0 at√© o tamanho do len()
# position + leave: manter a barra na mesma linha

for indice, id_loja in enumerate(vendas_df['ID Loja']):
    pbar.update()
    if id_loja == 222:
        vendas_df.loc[indice, 'Quantidade Devolvida'] += 1
